<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SignUp</title>
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <%- include('../partials/navbar') %>
    <div class="container">
      <div class="row signup-form">
        <div class="col-md-6 col-sm-12">
          <h2>SignUP</h2>
          <% if(message==="already exists" ){ %>
            <p class="p-2 bg-danger text-light">Email already Registered!</p>
            <% } else if(message=='registered' ) { %>
              <p class="p-2 bg-success text-light">You're Registered Successfully!</p>
              <% }%>          
                  <form action="/signup" method="POST">
                    <div class="form-group">
                      <label class="my-1">Enter Name</label>
                      <input type="name" class="form-control" aria-describedby="emailHelp" placeholder="Enter name"
                        required="true" name="name" />
                    </div>
                    <div class="form-group">
                      <label class="my-1">Email address</label>
                      <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email"
                        required="true" name="email" />
                    </div>
                    <div class="form-group">
                      <label class="my-1"> Enter Password</label>
                      <input type="password" class="form-control" name="password" placeholder="Password" required="true"
                        name="password"/>
                    </div>
                    <!-- Add a field for user type -->
                    <div class="form-group">
                      <label class="my-1"> Enter User Type (admin/user)</label>
                      <input type="text" class="form-control" name="userType" placeholder="userType" required="true"
                        name="userType"/>
                    </div>

                    <button type="submit" class="btn btn-primary my-1">SignUp</button>
                  </form>
                  <a href="login" class="mt-2">Already have account? Login</a>
        </div>
      </div>
    </div>
</body>

</html>